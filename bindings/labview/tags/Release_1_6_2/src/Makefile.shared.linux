#==============================================================================
# Makefile to generate the Tango Binding for LabVIEW - NL - SOLEIL
#============================================================================== 

#==============================================================================
# OMNIORB
#==============================================================================
OMNIORB_INSTALL_DIR = <your-omniorb-install-path>

#==============================================================================
# TANGO
#==============================================================================
TANGO_INSTALL_DIR = <your-tango-install-path>

#==============================================================================
# LABVIEW
#==============================================================================
LABVIEW_INSTALL_DIR = <your-lv-install-path>

#==============================================================================
# INCLUDE DIRS
#==============================================================================
INCLUDE_DIRS = -I. \
               -I$(OMNIORB_INSTALL_DIR)/include \
               -I$(TANGO_INSTALL_DIR)/include \
               -I$(LABVIEW_INSTALL_DIR)/cintools

#==============================================================================
# LIB_BASE_DIR
#==============================================================================
LIB_BASE_DIR = $(INC_BASE_DIR)

#==============================================================================
# LIB DIRS
#==============================================================================
LIB_DIRS = -L. \
					 -L$(OMNIORB_INSTALL_DIR)/lib \
           -L$(TANGO_INSTALL_DIR)/lib \
					 -L$(LABVIEW_INSTALL_DIR)/AppLibs 

#==============================================================================
# BINDING SHARED LIB: NAME & EXTENSION
#==============================================================================
LVB_NAME = tango_binding
LVB_EXT = dll

#==============================================================================
# COMP$(CC)ILER/LINKER OPTIONS for GNU/LINUX
#==============================================================================
CC=gcc
CXX=g++
#------------------------------------------------------------------------------
LVB_LIB_CFLAGS  = -fPIC -D_REENTRANT 
LVB_LIB_CFLAGS += -Wall -Wno-uninitialized -fno-enforce-eh-specs 
LVB_LIB_CFLAGS += -O3
LVB_LIB_CFLAGS += -g
#------------------------------------------------------------------------------
LVB_CFLAGS = $(LVB_LIB_CFLAGS)
#------------------------------------------------------------------------------
LD=gcc
#------------------------------------------------------------------------------
LVB_LDFLAGS  = -shared -O -pthread
LVB_LDFLAGS += -Wl,--verbose
LVB_LDFLAGS += -Wl,--version-script,tango_binding.map
LVB_LDFLAGS += -Wl,-soname,$(SO_NAME).$(SO_EXT)
#------------------------------------------------------------------------------

#------------------------------------------------------------------------------
# LIBS for LVB
#------------------------------------------------------------------------------
LVB_LIBS = -ltango \
           -llog4tango \
           -lomniORB4 \
           -lomniDynamic4 \
           -lCOS4 \
           -lomnithread \
           -llvrt

#------------------------------------------------------------------------------
# OBJS FILES
#------------------------------------------------------------------------------
LVB_OBJS = TangoBinding.so.o \
					 ThreadSafeDeviceProxy.so.o \
           DeviceDescriptor.so.o \
           DeviceRepository.so.o \
           GroupDescriptor.so.o \
           GroupRepository.so.o \
           DataAdapter.so.o \
           Endianness.so.o \
           ErrorStack.so.o \
           EventManager.so.o \
           ObjectManager.so.o

#------------------------------------------------------------------------------
# RULE for LVB_ .cpp 
#------------------------------------------------------------------------------
.SUFFIXES: .so.o .cpp
.cpp.so.o:
	$(CC) $(LVB_CFLAGS) $(INCLUDE_DIRS) -c -o $@ $<

#------------------------------------------------------------------------------
# RULE: all
#------------------------------------------------------------------------------
all: release

#------------------------------------------------------------------------------
# RULE: release
#------------------------------------------------------------------------------
release: build_lvb install

#------------------------------------------------------------------------------
# RULE: release
#------------------------------------------------------------------------------
debug: build_lvb install

#------------------------------------------------------------------------------
# RULE: build_lvb
#------------------------------------------------------------------------------
build_lvb: $(LVB_OBJS)
	$(LD) -o $(LVB_NAME).$(LVB_EXT) $(LVB_LDFLAGS) $(LVB_OBJS) $(LIB_DIRS) $(LVB_LIBS)

#------------------------------------------------------------------------------
# RULE: install
#------------------------------------------------------------------------------
install:
	cp -f ./$(LVB_NAME).$(LVB_EXT) ../tango_lv8

#------------------------------------------------------------------------------
# RULE: clean
#------------------------------------------------------------------------------
clean:
	rm -f *.o *.so.o *~ 
	rm -f $(LVB_NAME).$(LVB_EXT) 
	rm -f ../tango_lv8/$(LVB_NAME).$(LVB_EXT)



	








