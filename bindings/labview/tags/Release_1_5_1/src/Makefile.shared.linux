#==============================================================================
# Makefile to generate the Tango Binding for LabVIEW - NL - SOLEIL
#============================================================================== 
#==============================================================================
# BASE DIR
#==============================================================================
BASE_DIR = /home/operateur/GrpICA/leclercq/labview/labview-dist-linux

#==============================================================================
# LABVIEW CINTOOLS DIR FOR HEADERS
#==============================================================================
LV_INCLUDE = /usr/Local/labview/labview-8.5/LabVIEW-8.5/cintools

#==============================================================================
# INCLUDE DIRS
#==============================================================================
INCLUDE_DIRS = -I. \
               -I$(BASE_DIR)/include \
               -I$(LV_INCLUDE)

#==============================================================================
# LIB DIRS
#==============================================================================
LIB_DIRS = -L. \
					 -L$(BASE_DIR)/lib/tango \
					 -L$(BASE_DIR)/lib/lvrt

#==============================================================================
# BINDING SHARED LIB: NAME & EXTENSION
#==============================================================================
LVB_NAME = tango_binding
LVB_EXT = dll

#==============================================================================
# COMP$(CC)ILER/LINKER OPTIONS for GNU/LINUX
#==============================================================================
CC=gcc-3.2.3
CXX=g++-3.2.3
#------------------------------------------------------------------------------
LVB_LIB_CFLAGS  = -fPIC -D_REENTRANT -Wall -Wno-uninitialized -fno-enforce-eh-specs 
LVB_LIB_CFLAGS += -O2
#LVB_LIB_CFLAGS += -g -D_DEBUG
#------------------------------------------------------------------------------
LVB_CFLAGS = $(LVB_LIB_CFLAGS)
#------------------------------------------------------------------------------
LD=gcc-3.2.3
#------------------------------------------------------------------------------
LVB_LDFLAGS  = -shared -O -pthread
LVB_LDFLAGS += -Wl,--verbose
LVB_LDFLAGS += -Wl,--version-script,tango_binding.map
LVB_LDFLAGS += -Wl,-soname,$(SO_NAME).$(SO_EXT)
#------------------------------------------------------------------------------

#------------------------------------------------------------------------------
# LIBS for LVB
#------------------------------------------------------------------------------
LVB_LIBS = -ltango \
           -llog4tango \
           -lomniORB4 \
           -lomniDynamic4 \
           -lCOS4 \
           -lomnithread \
           -llvrt

#------------------------------------------------------------------------------
# OBJS FILES
#------------------------------------------------------------------------------
LVB_OBJS = TangoBinding.so.o \
					 ThreadSafeDeviceProxy.so.o \
           DeviceDescriptor.so.o \
           DeviceRepository.so.o \
           GroupDescriptor.so.o \
           GroupRepository.so.o \
           DataAdapter.so.o \
           Endianness.so.o \
           ErrorStack.so.o \
           EventManager.so.o \
           ObjectManager.so.o

#------------------------------------------------------------------------------
# RULE for LVB_ .cpp 
#------------------------------------------------------------------------------
.SUFFIXES: .so.o .cpp
.cpp.so.o:
	$(CC) $(LVB_CFLAGS) $(INCLUDE_DIRS) -c -o $@ $<

#------------------------------------------------------------------------------
# RULE: all
#------------------------------------------------------------------------------
all: release

#------------------------------------------------------------------------------
# RULE: release
#------------------------------------------------------------------------------
release: build_lvb install

#------------------------------------------------------------------------------
# RULE: release
#------------------------------------------------------------------------------
debug: build_lvb install

#------------------------------------------------------------------------------
# RULE: build_lvb
#------------------------------------------------------------------------------
build_lvb: $(LVB_OBJS)
	$(LD) -o $(LVB_NAME).$(LVB_EXT) $(LVB_LDFLAGS) $(LVB_OBJS) $(LIB_DIRS) $(LVB_LIBS)

#------------------------------------------------------------------------------
# RULE: install
#------------------------------------------------------------------------------
install:
	cp -f ./$(LVB_NAME).$(LVB_EXT) ../tango_lv8

#------------------------------------------------------------------------------
# RULE: clean
#------------------------------------------------------------------------------
clean:
	rm -f *.o *.so.o *~ 
	rm -f $(LVB_NAME).$(LVB_EXT) 
	rm -f ../tango_lv8/$(LVB_NAME).$(LVB_EXT)



	








