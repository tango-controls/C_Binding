#==============================================================================
# Makefile to generate the Tango Binding for LabVIEW - NL - SOLEIL
#============================================================================== 

#==============================================================================
# INC_BASE_DIR
#==============================================================================
INC_BASE_DIR = /home/operateur/GrpICA/leclercq/build

#==============================================================================
# LABVIEW CINTOOLS DIR FOR HEADERS
#==============================================================================
LV_INCLUDE = /usr/Local/labview/labview-8.5/LabVIEW-8.5/cintools

#==============================================================================
# INCLUDE DIRS
#==============================================================================
INCLUDE_DIRS = -I. \
               -I$(INC_BASE_DIR)/omniorb-4.1.4-gcc-3.2.3-install/include \
               -I$(INC_BASE_DIR)/tango-7.1.1-gcc-3.2.3-install/include \
               -I$(LV_INCLUDE)

#==============================================================================
# LIB_BASE_DIR
#==============================================================================
LIB_BASE_DIR = $(INC_BASE_DIR)

#==============================================================================
# LABVIEW CINTOOLS DIR FOR HEADERS
#==============================================================================
LV_LIBS = /home/operateur/GrpICA/leclercq/labview/labview-dist-linux/labview-8.5/lib/lvrt

#==============================================================================
# LIB DIRS
#==============================================================================
LIB_DIRS = -L. \
					 -L$(LIB_BASE_DIR)/omniorb-4.1.4-gcc-3.2.3-install/lib \
					 -L$(LIB_BASE_DIR)/tango-7.1.1-gcc-3.2.3-install/lib \
					 -L$(LV_LIBS)

#==============================================================================
# BINDING SHARED LIB: NAME & EXTENSION
#==============================================================================
LVB_NAME = tango_binding
LVB_EXT = dll

#==============================================================================
# COMP$(CC)ILER/LINKER OPTIONS for GNU/LINUX
#==============================================================================
CC=gcc
CXX=g++
#------------------------------------------------------------------------------
LVB_LIB_CFLAGS  = -fPIC -DPIC -D_REENTRANT -Wall -Wno-uninitialized -fno-enforce-eh-specs 
LVB_LIB_CFLAGS += -O2
LVB_LIB_CFLAGS += -g
#------------------------------------------------------------------------------
LVB_CFLAGS = $(LVB_LIB_CFLAGS)
#------------------------------------------------------------------------------
LD=gcc
#------------------------------------------------------------------------------
LVB_LDFLAGS  = -shared -O -pthread
LVB_LDFLAGS += -Wl,--verbose
LVB_LDFLAGS += -Wl,--version-script,tango_binding.map
LVB_LDFLAGS += -Wl,-soname,$(SO_NAME).$(SO_EXT)
#------------------------------------------------------------------------------

#------------------------------------------------------------------------------
# LIBS for LVB
#------------------------------------------------------------------------------
LVB_LIBS = -ltango \
           -llog4tango \
           -lomniORB4 \
           -lomniDynamic4 \
           -lCOS4 \
           -lomnithread \
           -llvrt

#------------------------------------------------------------------------------
# OBJS FILES
#------------------------------------------------------------------------------
LVB_OBJS = TangoBinding.so.o \
					 ThreadSafeDeviceProxy.so.o \
           DeviceDescriptor.so.o \
           DeviceRepository.so.o \
           GroupDescriptor.so.o \
           GroupRepository.so.o \
           DataAdapter.so.o \
           Endianness.so.o \
           ErrorStack.so.o \
           EventManager.so.o \
           ObjectManager.so.o

#------------------------------------------------------------------------------
# RULE for LVB_ .cpp 
#------------------------------------------------------------------------------
.SUFFIXES: .so.o .cpp
.cpp.so.o:
	$(CC) $(LVB_CFLAGS) $(INCLUDE_DIRS) -c -o $@ $<

#------------------------------------------------------------------------------
# RULE: all
#------------------------------------------------------------------------------
all: release

#------------------------------------------------------------------------------
# RULE: release
#------------------------------------------------------------------------------
release: build_lvb install

#------------------------------------------------------------------------------
# RULE: release
#------------------------------------------------------------------------------
debug: build_lvb install

#------------------------------------------------------------------------------
# RULE: build_lvb
#------------------------------------------------------------------------------
build_lvb: $(LVB_OBJS)
	$(LD) -o $(LVB_NAME).$(LVB_EXT) $(LVB_LDFLAGS) $(LVB_OBJS) $(LIB_DIRS) $(LVB_LIBS)

#------------------------------------------------------------------------------
# RULE: install
#------------------------------------------------------------------------------
install:
	cp -f ./$(LVB_NAME).$(LVB_EXT) ../tango_lv8

#------------------------------------------------------------------------------
# RULE: clean
#------------------------------------------------------------------------------
clean:
	rm -f *.o *.so.o *~ 
	rm -f $(LVB_NAME).$(LVB_EXT) 
	rm -f ../tango_lv8/$(LVB_NAME).$(LVB_EXT)



	








