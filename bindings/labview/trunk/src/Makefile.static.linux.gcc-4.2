#==============================================================================
# Makefile to generate the Tango Binding for LabVIEW - NL - SOLEIL
#============================================================================== 

#==============================================================================
# OMNIORB
#==============================================================================
#OMNIORB_INSTALL_DIR = <your-omniorb-install-path>
#OMNIORB_INSTALL_DIR=/home/tango/omniorb-4.1.4-build-gcc-4.2
OMNIORB_INSTALL_DIR=/home/operateur/GrpICA/leclercq/omniORB-4.1.4-gcc-4.2.4-build

#==============================================================================
# TANGO
#==============================================================================
#TANGO_INSTALL_DIR = <your-tango-install-path>
#TANGO_INSTALL_DIR=/home/tango/tango-7.1.1-build-gcc-4.2
TANGO_INSTALL_DIR=/home/operateur/GrpICA/leclercq/tango-7.1.1-gcc-4.2.4-build

#==============================================================================
# GCC
#==============================================================================
#GCC_INSTALL_DIR = <your-gcc-install-path>
#GCC_INSTALL_DIR=/home/tango/gcc-4.2-build
GCC_INSTALL_DIR=/usr/Local/gcc/gcc-4.2.4

#==============================================================================
# LABVIEW
#==============================================================================
#LABVIEW_INSTALL_DIR = <your-lv-install-path>
#LABVIEW_INSTALL_DIR=/usr/local/natinst/LabVIEW-2010
#LABVIEW_INSTALL_DIR=/usr/Local/labview/labview-2010/LabVIEW-2010
LABVIEW_INSTALL_DIR=/usr/Local/labview/labview-2009/LabVIEW-2009

#==============================================================================
# INCLUDE DIRS
#==============================================================================
INCLUDE_DIRS = -I. \
               -I$(OMNIORB_INSTALL_DIR)/include \
               -I$(TANGO_INSTALL_DIR)/include \
               -I$(LABVIEW_INSTALL_DIR)/cintools

#==============================================================================
# LIB DIRS
#==============================================================================
LIB_DIRS = -L. \
           -L$(OMNIORB_INSTALL_DIR)/lib/static \
           -L$(TANGO_INSTALL_DIR)/lib/static \
           -L$(GCC_INSTALL_DIR)/lib

#==============================================================================
# BINDING SHARED LIB: NAME & EXTENSION
#==============================================================================
LVB_NAME = tango_binding
LVB_EXT = dll

#==============================================================================
# GCC-VERSION
#==============================================================================
GCC_VERS=4.2.4

#==============================================================================
# COMP$(CC)ILER/LINKER OPTIONS for GNU/LINUX
#==============================================================================
CC=gcc-$(GCC_VERS)
CXX=g++-$(GCC_VERS)
#------------------------------------------------------------------------------
LVB_LIB_CFLAGS  = -fPIC -D_REENTRANT
LVB_LIB_CFLAGS += -Wno-uninitialized -fno-enforce-eh-specs
LVB_LIB_CFLAGS += -O3
LVB_LIB_CFLAGS += -g
#------------------------------------------------------------------------------
LVB_CFLAGS = $(LVB_LIB_CFLAGS)
#------------------------------------------------------------------------------
LD=gcc-$(GCC_VERS)
#------------------------------------------------------------------------------
LVB_LDFLAGS  = -shared -O -pthread
LVB_LDFLAGS += -Wl,--version-script,tango_binding.map
LVB_LDFLAGS += -Wl,-soname,$(LVB_NAME).$(LVB_EXT)
#------------------------------------------------------------------------------

#------------------------------------------------------------------------------
# LIBS for LVB
#------------------------------------------------------------------------------
LVB_LIBS = -ltango \
           -llog4tango \
           -lomniDynamic4 \
           -lCOS4 \
           -lomniORB4 \
           -lomnithread
           
#------------------------------------------------------------------------------
# OBJS FILES
#------------------------------------------------------------------------------
LVB_OBJS = TangoBinding.so.o \
					 ThreadSafeDeviceProxy.so.o \
           DeviceDescriptor.so.o \
           DeviceRepository.so.o \
           GroupDescriptor.so.o \
           GroupRepository.so.o \
           DataAdapter.so.o \
           Endianness.so.o \
           ErrorStack.so.o \
           EventManager.so.o \
           ObjectManager.so.o

#------------------------------------------------------------------------------
# RULE for LVB_ .cpp 
#------------------------------------------------------------------------------
.SUFFIXES: .so.o .cpp
.cpp.so.o:
	$(CC) $(LVB_CFLAGS) $(INCLUDE_DIRS) -c -o $@ $<

#------------------------------------------------------------------------------
# RULE: all
#------------------------------------------------------------------------------
all: release

#------------------------------------------------------------------------------
# RULE: release
#------------------------------------------------------------------------------
release: build_lvb install

#------------------------------------------------------------------------------
# RULE: release
#------------------------------------------------------------------------------
debug: build_lvb install

#------------------------------------------------------------------------------
# RULE: build_lvb
#------------------------------------------------------------------------------
build_lvb: $(LVB_OBJS)
	$(LD) $(LVB_LDFLAGS) $(LVB_OBJS) $(LIB_DIRS) $(LVB_LIBS) -o $(LVB_NAME).$(LVB_EXT)

#------------------------------------------------------------------------------
# RULE: install
#------------------------------------------------------------------------------
install:
	cp -f ./$(LVB_NAME).$(LVB_EXT) ../tango_lv9

#------------------------------------------------------------------------------
# RULE: clean
#------------------------------------------------------------------------------
clean:
	rm -f *.o *.so.o *~ 
	rm -f $(LVB_NAME).$(LVB_EXT) 
	rm -f ../tango_lv9/$(LVB_NAME).$(LVB_EXT)



	








